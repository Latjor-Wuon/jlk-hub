web: if [ -f "manage.py" ]; then gunicorn jln_hub.wsgi:application --bind 0.0.0.0:${PORT:-8000} --workers 2 --timeout 120 --log-level debug; else cd backend && gunicorn jln_hub.wsgi:application --bind 0.0.0.0:${PORT:-8000} --workers 2 --timeout 120 --log-level debug; fi
release: if [ -f "manage.py" ]; then python manage.py migrate --no-input; else cd backend && python manage.py migrate --no-input; fi
